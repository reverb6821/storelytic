{
  "name": "server",
  "version": "0.0.1",
  "description": "webserver for storelytic",
  "main": "src/app.ts",
  "scripts": {
    "setup:project": "pnpm install && npx husky-init",
    "precommit": "lint-staged",
    "prepare": "npx husky && npx husky install",
    "app:build": "tsc && node dist/app.js",
    "app:dev": "nodemon - exec 'ts-node' src/app.ts",
    "app:lint": "eslint . --fix",
    "app:lint:fix": "eslint . -c ts --fix"
  },
  "author": "Giuseppe Gigliotti",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.15.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.4.0",
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "eslint": "9.x",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.3",
    "plop": "^4.0.1",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^7.13.0"
  },
  "_moduleAliases": {
    "@": "./",
    "@lib": "./lib",
    "@routes": "./src/routes",
    "@middleware": "./src/middleware",
    "@controllers": "./src/controllers",
    "@entities": "./src/entities"
  }
}
